{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "custom.d.ts",
    "lib/appwrite.js",
    "context/GlobalProvider.js"
  ]
}
